// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true
    },
    "files.associations": {
        "**/server/src/**/*.js": "javascript",
        "**/client/src/**/*.js": "javascriptreact",
        ".env": "properties",
        "*.h": "c",
        "*.c": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "__split_buffer": "c",
        "atomic": "c",
        "ios": "c",
        "string": "c",
        "system_error": "c",
        "vector": "c"
    },
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 120,
    "editor.rulers": []
}
